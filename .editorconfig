# EditorConfig for dea-web project
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# JavaScript/JSON files
[*.{js,json}]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2
